# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
max_line_length = 100
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[Makefile*]
indent_style = tab

[{*.md,*.js,*.scss,*.yml}]
indent_size = 2

[*.html]
max_line_length = unset
